    "jest": "^30.0.5",
    "jsdom": "^24.0.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/jest": "^29.5.0",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0"
  },
  "engines": {
    "node": ">=20.14.0"
  }

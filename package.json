{
  "name": "@your-org/mcp-accessibility-evaluator",
  "version": "0.1.0",
  "description": "MCP server for evaluating web accessibility against WCAG, ARIA, and MDN standards",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "clean": "rm -rf dist",
